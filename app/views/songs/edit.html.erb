<h1>Edit Song</h1>
<% if @song.errors.any? %>
    <p style="color:red"><%= flash[:errors] %></p>
<% end %>
<br>
<%= form_for @song do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<input id="song_released" type="checkbox" name="song[released]" checked>
<br>
<%= f.label :release_year %>
<%= f.text_field :release_year %>
<br>
<%= f.label :artist_name %>
<%= f.text_field :artist_name %>
<br>
<%= f.label :genre %>
<%= f.text_field :genre %>
<br>
<br>
<%= f.submit "Update Song" %>
<% end %>